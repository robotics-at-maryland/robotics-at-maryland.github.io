<div class="resource-card">
    <div class="box">
        <div class="content">
            <p class="title">
                <a href="//{{ link }}" target="_blank" rel="noreferrer noopener"><!--Link to resource-->
                    <!--Title of Resource-->
                    {{ title }}
                </a>
            </p>
            <p class="subtitle is-spaced">
                <!--From whom its from-->
                {{ author }}
            </p>
            <p class="body">
                <!--a brief description of it-->
                {{ #description }}
                    {{.}}
                {{ /description}}
            </p>

            <div id="category-tags">
                <!--Place category tags here-->
                {{ #categories }}
                <span class="tag is-dark is-medium">
                    {{ category }}
                </span>
                {{ /categories }}
            </div>

        </div>
    </div>
</div>
